<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>Fast.NET 框架公共资源模块库。</Description>
		<!-- 阻止生成 Nuget 包 -->
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<!-- 阻止全局默认引用公共类库 -->
		<RemoveProjectReferenceCommunalResources>true</RemoveProjectReferenceCommunalResources>
	</PropertyGroup>

	<ItemGroup>
		<!-- 阻止拷贝全局的 README.MD 文件 -->
		<None Remove="$(SolutionDir)README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<!-- 阻止将内部资源文件夹共享到每个类库的 CommunalResources 文件夹下面 -->
		<Compile Remove="$(SolutionDir)Resources\Fast.CommunalResources\**\*.cs" />
	</ItemGroup>

	<ItemGroup>
		<!-- 更改公共资源文件夹共享到每个类库的 CommunalResources 文件夹，将其放在根目录下 -->
		<Compile Include="$(SolutionDir)Resources\Fast.CommunalResources\**\*.cs" Pack="true" PackagePath="\" Exclude="bin\**;obj\**" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Include="Internal\Utils\InternalAssemblyUtil.cs" />
	</ItemGroup>

</Project>