{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Error",
      "Fast": "Error"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    // 初始化 Database
    "InitializeDatabase": false
  },
  "JWTSettings": {
    // 启用
    "Enable": true,
    // 是否验证密钥
    "ValidateIssuerSigningKey": true,
    // 签名密钥，string 类型，必须是复杂密钥，长度等于32
    "IssuerSigningKey": "Xh6<>-L*d%/Qg)cktH[]t3tk{tFZ%=9R",
    // 是否验证签发方
    "ValidateIssuer": true,
    // 签发方，string 类型
    "ValidIssuer": "Fast.API",
    // 是否验证签收方
    "ValidateAudience": true,
    // 签收方，string 类型
    "ValidAudience": "Fast.Web",
    // 是否验证过期时间
    "ValidateLifetime": true,
    // Token 过期时间，单位分钟
    "TokenExpiredTime": 30,
    // 刷新Token 过期时间，单位分钟
    "RefreshTokenExpireTime": 43200,
    // 过期时间容错值，单位秒
    "ClockSkew": 5
  },
  "SwaggerSettings": {
    // 启用
    "Enable": true,
    "DocumentTitle": "Fast",
    "DocExpansionState": "None",
    "EnableAllGroups": true,
    "HideServers": true,
    // 生成Json文件枚举配置
    "EnumToNumber": true,
    "GroupOpenApiInfos": [
      {
        "Group": "Default",
        "Title": "Fast.Admin",
        "Description": "前后端分离架构，开箱即用，紧随前沿技术。<br/>作者By 1.8K 仔<br/><a href='https://gitee.com/Net-18K/fast.net'>https://gitee.com/Net-18K/fast.net</a>",
        "Version": "1.0.0"
      },
      {
        "Group": "Auth",
        "Title": "鉴权接口",
        "Description": "Fast.Admin 鉴权接口",
        "Version": "1.0.0"
      },
      {
        "Group": "System",
        "Title": "系统接口",
        "Description": "Fast.Admin 系统接口",
        "Version": "1.0.0"
      }
    ]
  }
}
