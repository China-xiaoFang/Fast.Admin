{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "AllowedHosts": "*",
  // 数据库连接字符串
  "ConnectionSettings": {
    // 默认库连接Id
    "ConnectionId": "Fast",
    // 默认库服务器Ip
    "ServiceIp": "127.0.0.1",
    // 默认库端口号
    "Port": "1433",
    // 默认库数据库名称
    "DbName": "FastCloud",
    // 默认库数据库用户
    "DbUser": "admin",
    // 默认库数据库密码
    "DbPwd": "123456",
    // 自定义连接字符串
    "CustomConnectionStr": null,
    // 默认库服务器类型
    "DbType": "SqlServer",
    // 超时时间，单位秒
    "CommandTimeOut": 60,
    // SqlSugar Sql执行最大秒数，如果超过记录警告日志
    "SugarSqlExecMaxSeconds": 30,
    // 差异日志
    "DiffLog": true,
    // 禁用 SqlSugar 的 Aop
    "DisableAop": false
  },
  // Redis 缓存连接字符串
  "RedisSettings": [
    {
      "ServiceName": "Default",
      "ServiceIp": "127.0.0.1",
      "Port": 6379,
      "DbName": 1,
      "DbPwd": "123456",
      "Prefix": "Fast_"
    }
  ],
  // 雪花Id
  "SnowflakeSettings": {
    "WorkerId": 1
  },
  // JWT Token 配置
  "JWTSettings": {
    // 启用
    "Enable": true,
    // 是否验证密钥
    "ValidateIssuerSigningKey": true,
    // 签名密钥，string 类型，必须是复杂密钥，长度等于32
    "IssuerSigningKey": "Xh6<>-L*d%/Qg)cktH[]t3tk{tFZ%=9R",
    // 是否验证签发方
    "ValidateIssuer": true,
    // 签发方，string 类型
    "ValidIssuer": "Fast.Admin",
    // 是否验证签收方
    "ValidateAudience": true,
    // 签收方，string 类型
    "ValidAudience": "Fast.Admin.Web",
    // 是否验证过期时间
    "ValidateLifetime": true,
    // 是否验证 AssessToken
    "ValidateAccessToken": true,
    // Token 过期时间，单位分钟
    "TokenExpiredTime": 30,
    // 刷新Token 过期时间，单位分钟
    "RefreshTokenExpireTime": 1440,
    // 过期时间容错值，单位秒
    "ClockSkew": 5
  },
  // Swagger 配置
  "SwaggerSettings": {
    // 禁用
    "Enable": false,
    "DocumentTitle": "Fast",
    "DocExpansionState": "None",
    "EnableAllGroups": true,
    "HideServers": true,
    // 生成Json文件枚举配置
    "EnumToNumber": true,
    "GroupOpenApiInfos": [
      {
        "Group": "FastCloud",
        "Title": "FastCloud",
        "Description": "一个持续集百家所长 众多黑科技的 .NET Web应用框架。<br/>前后端分离架构，开箱即用，紧随前沿技术。<br/>作者By 小方<br/><a href='https://gitee.com/China-xiaoFang/Fast.Admin'>https://gitee.com/China-xiaoFang/Fast.Admin</a>",
        "Version": "3.0.0",
        "Order": 999
      },
      {
        "Group": "Auth",
        "Title": "鉴权接口",
        "Description": "Fast.FastCloud 鉴权接口",
        "Version": "3.0.0",
        "Order": 998
      },
      {
        "Group": "FastCloudLog",
        "Title": "FastCloud 日志模块",
        "Description": "Fast.FastCloud 日志模块接口",
        "Version": "3.0.0",
        "Order": 997
      }
    ]
  }
}
